# 0:/cfg/ui_actions.ngc
# Encoder action mapping. Section [ACTIONS] is optional.
# Available actions:
# NONE, PATCH_PREV, PATCH_NEXT, BANK_PREV, BANK_NEXT, LOAD_APPLY,
# UI_PREV_PAGE, UI_NEXT_PAGE, CURSOR_LEFT, CURSOR_RIGHT, ZOOM_OUT, ZOOM_IN,
# QUANTIZE, DELETE, TOGGLE_CHORD_MODE, TOGGLE_AUTO_LOOP
[ACTIONS]
# ENC0 (NAV encoder)
ENC0_CW=PATCH_NEXT
ENC0_CCW=PATCH_PREV
ENC0_SHIFT_CW=BANK_NEXT
ENC0_SHIFT_CCW=BANK_PREV
ENC0_BTN=LOAD_APPLY
ENC0_SHIFT_BTN=LOAD_APPLY

# ENC1 (UI editor)
ENC1_CW=CURSOR_RIGHT
ENC1_CCW=CURSOR_LEFT
ENC1_SHIFT_CW=ZOOM_IN
ENC1_SHIFT_CCW=ZOOM_OUT
ENC1_BTN=UI_NEXT_PAGE
ENC1_SHIFT_BTN=UI_PREV_PAGE
