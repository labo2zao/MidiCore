# MidiCore LiveFX Default Settings
# Future enhancement - not yet implemented in config_io.c
# This file shows the planned format for LiveFX configuration

# =============================================================================
# Track 1 LiveFX Settings
# =============================================================================
TRACK1_LIVEFX_ENABLE = 1
TRACK1_TRANSPOSE = 0          # Range: -12 to +12 semitones
TRACK1_VELOCITY_SCALE = 128   # Range: 0-255 (128 = 100%)
TRACK1_SCALE_TYPE = 0         # 0 = Chromatic (no quantization)
TRACK1_SCALE_ROOT = 0         # 0 = C

# =============================================================================
# Track 2 LiveFX Settings
# =============================================================================
TRACK2_LIVEFX_ENABLE = 0
TRACK2_TRANSPOSE = 0
TRACK2_VELOCITY_SCALE = 128
TRACK2_SCALE_TYPE = 0
TRACK2_SCALE_ROOT = 0

# =============================================================================
# Track 3 LiveFX Settings
# =============================================================================
TRACK3_LIVEFX_ENABLE = 0
TRACK3_TRANSPOSE = 0
TRACK3_VELOCITY_SCALE = 128
TRACK3_SCALE_TYPE = 0
TRACK3_SCALE_ROOT = 0

# =============================================================================
# Track 4 LiveFX Settings
# =============================================================================
TRACK4_LIVEFX_ENABLE = 0
TRACK4_TRANSPOSE = 0
TRACK4_VELOCITY_SCALE = 128
TRACK4_SCALE_TYPE = 0
TRACK4_SCALE_ROOT = 0

# =============================================================================
# Scale Types Reference
# =============================================================================
# 0  = Chromatic (no quantization)
# 1  = Major
# 2  = Minor (Natural)
# 3  = Minor (Harmonic)
# 4  = Minor (Melodic)
# 5  = Dorian
# 6  = Phrygian
# 7  = Lydian
# 8  = Mixolydian
# 9  = Locrian
# 10 = Major Pentatonic
# 11 = Minor Pentatonic
# 12 = Blues
# 13 = Whole Tone
# 14 = Diminished

# =============================================================================
# Scale Root Notes Reference
# =============================================================================
# 0  = C
# 1  = C#/Db
# 2  = D
# 3  = D#/Eb
# 4  = E
# 5  = F
# 6  = F#/Gb
# 7  = G
# 8  = G#/Ab
# 9  = A
# 10 = A#/Bb
# 11 = B
